<%- model_class = Account -%>
<div class="page-header">
  <h1><%= @account.profile.name %> (@<%= @account %>)</h1>
  <img src="<%= @account.profile.avatar_url %>" width="60" height="60">
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:username) %>:</strong></dt>
  <dd><%= @account.username %></dd>
</dl>

<ul>
<% @checks.each do |check| %>
  <li><%= check.created_at %>:
    <br>Followers gained: <%= check.followers_added.join(', ') unless check.followers_added.nil?  %>
    <br>Followers lost: <%= check.followers_removed.join(', ') unless check.followers_removed.nil?  %>
    <br>Accounts followed: <%= check.following_added.join(', ') unless check.following_added.nil?  %><br>

    Accounts unfollowed: <% if !check.following_removed.nil? %>
        <% check.following_removed.each do |account|  %>
          <%= profile(account).name %>
        <% end %>
    <% end %>
  </li>
<% end %>
</ul>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              accounts_path, :class => 'btn'  %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              account_path(@account),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
