<div class="page-header">
  <h1><%= @account.profile.name %> (@<%= @account %>)</h1>
  <img src="<%= @account.profile.avatar_url %>" width="60" height="60">
</div>

<dl class="dl-horizontal">
  <dt><strong>Username:</strong></dt>
  <dd><%= @account.username %></dd>
</dl>

<p>There have been <%= @checks.count %> checks.</p>

<ul>
<% @checks.each do |check| %>
  <li><%= check.created_at.stamp("July 20 at 9:21pm") %>:
    <br>Followers gained: <%= check.followers_added.join(', ') unless check.followers_added.nil?  %>
    <br>Followers lost: <%= check.followers_removed.join(', ') unless check.followers_removed.nil?  %>
    <br>Accounts followed: <%= check.following_added.join(', ') unless check.following_added.nil?  %><br>

    Accounts unfollowed: <% if !check.following_removed.nil? %>
        <% check.following_removed.each do |account|  %>
          <%= account %>
        <% end %>
    <% end %>
  </li>
<% end %>
</ul>

<div class="form-actions">
  <%= link_to "back", accounts_path, :class => 'btn'  %>
  <%= link_to "destroy", account_path(@account),
              :method => 'delete',
              :data => { :confirm =>  'Are you sure?' },
              :class => 'btn btn-danger' %>
</div>
